<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/base_header_size</item>
        <item name="android:paddingTop">@dimen/base_header_top_padding</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="field" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/base_txt_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
</resources>