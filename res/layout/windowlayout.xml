<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Restaurant Title"
            android:textColor="#352931"
            android:gravity="center"/>

    <TextView
            android:id="@+id/tv_friends_distance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="all invited friends are within 5 miles"
            android:textColor="#A17C95"/>


    <TextView
            android:id="@+id/tv_my_distance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#787274"/>

</LinearLayout>