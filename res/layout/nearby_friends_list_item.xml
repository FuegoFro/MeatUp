<?xml version="1.0" encoding="utf-8"?>

<com.cs160.fall13.MeatUp.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="8dp"
              android:background="@drawable/add_friend_background"
        >

    <ImageView android:id="@+id/prof_pic"
               android:layout_height="30dp"
               android:layout_width="30dp"
               android:src="@drawable/towelie"
               android:paddingRight="10dp"
               android:layout_alignParentLeft="true"
               android:contentDescription="user picture"
              />

    <TextView android:id="@+id/friend_distance"
              android:layout_height="match_parent"
              android:layout_width="wrap_content"
              android:layout_alignParentRight="true"
              android:gravity="center_vertical"
              android:textSize="@dimen/base_txt_size"
              android:text="3 mi"
              />

    <TextView android:id="@+id/friend_name"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_toRightOf="@id/prof_pic"
              android:textSize="@dimen/base_txt_size"
              android:text="Fred Jones"
              />

</com.cs160.fall13.MeatUp.CheckableRelativeLayout>